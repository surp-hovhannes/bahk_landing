---
import Layout from "../layouts/Layout.astro";
import HeroGraphicStatic from "../components/HeroGraphicStatic.astro";
import HeroGraphic from "../components/HeroGraphic.astro";
---

<Layout>
  <div class="flex items-center justify-center">
    <div class="text-center">
      <img
        src="/FastandPrayLogo.png"
        alt="Fast & Pray Logo"
        class="h-12 mx-auto mb-4"
      />
      <div class="m-auto w-96 mb-10 text-[#3B0714] font-semibold text-md">
        Your companion in building a healthy and fulfilling personal spiritual
        practice of fasting and prayer in the Armenian Apostolic Church.
      </div>
      <a
        href="#"
        class="app-download-link block mx-auto my-10 w-96 max-w-full bg-gradient-to-t from-[#B5244A] to-[#E54670] text-white text-lg py-3 px-8 rounded-full text-center select-none hover:bg-gradient-to-b hover:from-[#B5244A] hover:to-[#E54670]"
        role="button"
        tabindex="0"
      >
        Download the App
      </a>

      <div class="flex justify-center gap-4">
        <a
          href="https://apps.apple.com/us/app/fast-pray/id6739975074"
          target="_blank"
          class="inline-block"
        >
          <img
            src="/Download_on_the_App_Store_Badge.svg"
            alt="Download on the App Store"
            class="h-12"
          />
        </a>
        <a
          href="https://play.google.com/store/apps/details?id=com.stjohn.bahk"
          target="_blank"
          class="inline-block"
        >
          <img
            src="/Google_Play_Store_badge_EN.svg"
            alt="Download on the Play Store"
            class="h-12"
          />
        </a>
      </div>
      <div class="flex justify-center gap-4 mt-5 mb-12">
        <a
          href="https://web.fastandpray.app"
          target="_blank"
          class="inline-block px-6 py-3 underline text-lg text-[#3B0714]"
        >
          Use the Web Version
        </a>
      </div>
      <div class="hidden md:block">
        <HeroGraphicStatic />
      </div>
      <div class="block md:hidden">
        <HeroGraphic />
      </div>
      <p class="text-lg mt-10">
        Join a global community of fasters, receive notifications about
        church-designed fasting periods, and track daily habits like praying,
        reading the Bible, and doing charity.
      </p>

      <!-- Key Features Section -->
      <div class="mt-8 mb-6 max-w-3xl mx-auto">
        <h2 class="text-2xl font-bold mb-4">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-left">
          <div class="bg-white bg-opacity-10 p-4 rounded-lg">
            <h3 class="text-lg font-bold">Fasting Notifications</h3>
            <p class="text-md">
              Stay informed about church-designated fasting periods with timely
              alerts.
            </p>
          </div>
          <div class="bg-white bg-opacity-10 p-4 rounded-lg">
            <h3 class="text-lg font-bold">Guided Prayers</h3>
            <p class="text-md">
              Access prayers and guided meditations to support your daily prayer
              discipline.
            </p>
          </div>
          <div class="bg-white bg-opacity-10 p-4 rounded-lg">
            <h3 class="text-lg font-bold">Daily Bible Readings</h3>
            <p class="text-md">
              Follow scripture selections according to the Armenian Apostolic
              Church calendar.
            </p>
          </div>
        </div>
        <div class="mt-2 text-center">
          <a href="/about" class="text-accent hover:underline"
            >Learn more about all features â†’</a
          >
        </div>
      </div>
    </div>
  </div>
</Layout>
