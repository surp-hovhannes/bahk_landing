---
import Layout from "../../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  const tagSet = new Set<string>();
  for (const p of posts) {
    for (const t of p.data.tags || []) tagSet.add(t);
  }
  return Array.from(tagSet).map((tag) => ({ params: { tag } }));
}

export const prerender = true;

const tag = Astro.params.tag;
const posts = (await getCollection("blog", ({ data }) => !data.draft && (data.tags || []).includes(tag))).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout pageTitle={`Posts tagged “${tag}” • Fast & Pray`}>
  <h1 class="text-3xl font-bold mb-6 text-[#3B0714]">Posts tagged “{tag}”</h1>
  {posts.length === 0 ? (
    <p class="text-gray-700">No posts for this tag.</p>
  ) : (
    <ul class="space-y-8">
      {posts.map((post) => (
        <li>
          <a href={`/blog/${post.slug}/`} class="block group">
            <h2 class="text-2xl font-semibold group-hover:underline text-[#3B0714]">{post.data.title}</h2>
            {post.data.description && (
              <p class="text-gray-700 mt-1">{post.data.description}</p>
            )}
            <p class="text-sm text-gray-500 mt-1">{post.data.pubDate.toLocaleDateString()}</p>
          </a>
        </li>
      ))}
    </ul>
  )}
</Layout>


