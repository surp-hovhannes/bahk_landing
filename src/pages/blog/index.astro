---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog", ({ data }) => !data.draft)).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout pageTitle="Blog â€¢ Fast & Pray">
  <h1 class="text-3xl font-bold mb-6 text-[#3B0714]">Blog</h1>
  {posts.length === 0 ? (
    <p class="text-gray-700">No posts yet. Please check back soon.</p>
  ) : (
    <div class="flex items-center justify-between mb-6">
      <a href="/blog/tags/" class="text-accent hover:underline">Browse by tags</a>
      <a href="/rss.xml" class="text-accent hover:underline">RSS</a>
    </div>
    <ul class="space-y-8">
      {posts.map((post) => (
        <li>
          <a href={`/blog/${post.slug}/`} class="block group">
            <h2 class="text-2xl font-semibold group-hover:underline text-[#3B0714]">{post.data.title}</h2>
            {post.data.description && (
              <p class="text-gray-700 mt-1">{post.data.description}</p>
            )}
            <p class="text-sm text-gray-500 mt-1">{post.data.pubDate.toLocaleDateString()}</p>
          </a>
        </li>
      ))}
    </ul>
  )}
</Layout>


