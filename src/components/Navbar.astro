---
// Navbar logic if needed
---
<nav class="bg-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="text-2xl font-bold">Fast & Pray</a>
      <!-- Navigation Links -->
      <div class="hidden md:flex space-x-6">
        <a href="/" class="hover:text-gray-300">Home</a>
        <a href="/about" class="hover:text-gray-300">About</a>
        <a href="/acknowledgements" class="hover:text-gray-300">Acknowledgements</a>
        <a href="/support" class="hover:text-gray-300">Support</a>
      </div>
      <!-- Mobile Menu Button -->
      <button id="menu-toggle" class="md:hidden text-gray-300 hover:text-white focus:outline-none">
        <!-- Menu Icon -->
        <svg class="h-6 w-6" fill="none" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    <!-- Mobile Dropdown -->
    <div id="mobile-menu" class="hidden md:hidden">
      <a href="/" class="block px-4 py-2 hover:bg-gray-700">Home</a>
      <a href="/about" class="block px-4 py-2 hover:bg-gray-700">About</a>
      <a href="/acknowledgements" class="block px-4 py-2 hover:bg-gray-700">Acknowledgements</a>
      <a href="/support" class="block px-4 py-2 hover:bg-gray-700">Support</a>
      <a href="https://apps.apple.com" class="block px-4 py-2 hover:bg-gray-700">App Store</a>
    </div>
  </nav>
  <script>
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    if (toggle && menu) {
        toggle.addEventListener('click', () => menu.classList.toggle('hidden'));
    }
  </script>